# Zero hardcoded configuration file
# All runtime values are loaded dynamically.

# Build-time defaults
# Development mode (uncomment if needed)
# NEXT_PUBLIC_SHOW_SETTINGS_MENU=true
# NEXT_PUBLIC_DEBUG_MODE=true
# NEXT_PUBLIC_ENV=development

# Production mode
NEXT_PUBLIC_SHOW_SETTINGS_MENU=false
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ENV=production

# App metadata
NEXT_PUBLIC_APP_NAME=LiveKit Meet

## Gateway authentication
# Replace with real credentials in deployment
NEXT_PUBLIC_GATEWAY_API_KEY=ak_web_001
NEXT_PUBLIC_GATEWAY_API_SECRET=as_web_secret_key_4j8k2m9n6q1r5t7y
NEXT_PUBLIC_APP_DESCRIPTION=LiveKit-based video conferencing system

# Feature toggles
NEXT_PUBLIC_ENABLE_RECORDING=true
NEXT_PUBLIC_ENABLE_SCREEN_SHARE=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_WHITEBOARD=false

# Room defaults
NEXT_PUBLIC_MAX_PARTICIPANTS=50
NEXT_PUBLIC_DEFAULT_VIDEO_QUALITY=high
NEXT_PUBLIC_ENABLE_NOISE_CANCELLATION=true

# Logging
NEXT_PUBLIC_LOG_LEVEL=info

# Usage notes:
# 1. For development, uncomment the dev block and adjust as needed.
# 2. Production builds use the values above as defaults.
# 3. Client-visible variables must keep the NEXT_PUBLIC_ prefix.
# 4. NEXT_PUBLIC_前缀是Next.js客户端环境变量的要求
